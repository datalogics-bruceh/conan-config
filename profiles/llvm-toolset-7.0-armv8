include(global)
include(boost-options)
include(options-libtiff)
[settings]
os=Linux
arch=armv8
compiler=clang
compiler.version=7.0
compiler.toolset=llvm-toolset-7
compiler.libcxx=libstdc++
build_type=Release
[buildenv]
PATH=+(path)/opt/rh/llvm-toolset-7.0/root/usr/bin
CC=/opt/rh/llvm-toolset-7.0/root/usr/bin/clang
CXX=/opt/rh/llvm-toolset-7.0/root/usr/bin/clang++
LD_LIBRARY_PATH=+(path)/opt/rh/llvm-toolset-7.0/root/usr/lib64
X_SCLS=llvm-toolset-7.0
